unit unitCadProduto;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.Grids, Vcl.DBGrids,
  Vcl.StdCtrls, Vcl.Mask, Vcl.ExtCtrls, Vcl.DBCtrls, Vcl.Buttons;

type
  TformCadProduto = class(TForm)
    Label1: TLabel;
    DBNavigator1: TDBNavigator;
    editQuantidade: TDBEdit;
    editValidade: TDBEdit;
    editFabricante: TDBEdit;
    editDescricao: TDBEdit;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    DBGrid1: TDBGrid;
    Label6: TLabel;
    Label7: TLabel;
    Label8: TLabel;
    Label9: TLabel;
    procedure DBNavigator1Click(Sender: TObject; Button: TNavigateBtn);
    procedure FormShow(Sender: TObject);
    procedure Calcular;
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  formCadProduto: TformCadProduto;

implementation

{$R *.dfm}

uses unitDM;
procedure TformCadProduto.Calcular;
var
  totalEstoque : Integer;
begin
  DM.tbProdutos.First;

  while not DM.tbProdutos.Eof do
    begin
      totalEstoque := totalEstoque + DM.tbProdutosestoque_atual.Value;
      DM.tbProdutos.Next;
    end;
  Label9.caption := IntToStr(DM.tbProdutos.RecordCount);
end;

procedure TformCadProduto.DBNavigator1Click(Sender: TObject;
  Button: TNavigateBtn);
begin
  if Button = nbPost then
    begin
     Label7.Caption := IntToStr(DM.tbProdutos.RecordCount);
     Calcular;
    end;
  if Button = nbDelete then
    begin
      Label7.Caption := IntToStr(DM.tbProdutos.RecordCount);
      calcular;
    end;
end;

procedure TformCadProduto.FormShow(Sender: TObject);

begin
  Label7.Caption := IntToStr(DM.tbProdutos.RecordCount);
  Calcular;
end;
end.
