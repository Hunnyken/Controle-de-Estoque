unit unitCadProduto;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.Grids, Vcl.DBGrids,
  Vcl.StdCtrls, Vcl.Mask, Vcl.ExtCtrls, Vcl.DBCtrls, Vcl.Buttons;

type
  TformCadProduto = class(TForm)
    Label1: TLabel;
    DBNavigator1: TDBNavigator;
    editQuantidade: TDBEdit;
    editValidade: TDBEdit;
    editFabricante: TDBEdit;
    editDescricao: TDBEdit;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    DBGrid1: TDBGrid;
    Label6: TLabel;
    Label7: TLabel;
    procedure DBNavigator1Click(Sender: TObject; Button: TNavigateBtn);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  formCadProduto: TformCadProduto;

implementation

{$R *.dfm}

uses unitDM;

procedure TformCadProduto.DBNavigator1Click(Sender: TObject;
  Button: TNavigateBtn);
begin
  if Button = nbPost then
    begin
     Label7.Caption := IntToStr(DM.tbProdutos.RecordCount);
    end;
end;

end.
